<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Style_20"
    tools:context=".Questions_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10sp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="15sp"
                android:paddingBottom="15sp">
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/totalQuestions"
                    android:textColor="#0074F1"
                    android:textSize="15sp"
                    android:text="Total: 0"/>
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/correctQuestions"
                    android:textColor="#008C25"
                    android:textSize="15sp"
                    android:text="Correct: 0"/>
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/wrongQuestions"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:text="Wrong: 0"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/questionIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Question. 1"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:gravity="center"
            android:text="Here is a question"
            android:layout_margin="10sp"
            android:textAlignment="center"
            android:textSize="25dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/optA"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:text="Option 1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/optB"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:text="Option 2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/optC"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:text="Option 3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/optD"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:text="Option 4" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>